{
  "normalization": {
    "trimWhitespace": true,
    "collapseSpaces": true,
    "caseSensitiveNames": false,
    "methodNameCanonicalization": "stripSpacesAndParens"
  },
  "allowExtraElements": true,

  "classSet": [
    {
      "name": "Product",
      "aliases": ["IProduct", "AbstractProduct"],
      "isAbstract": true,
      "methods": [{ "name": "Operation", "mustBeAbstract": true }]
    },
    {
      "name": "ConcreteProductA",
      "methods": [{ "name": "Operation" }]
    },
    {
      "name": "Creator",
      "aliases": ["AbstractCreator"],
      "isAbstract": true,
      "methods": [{ "name": "FactoryMethod" }, { "name": "DoSomething" }]
    },
    {
      "name": "ConcreteCreatorA",
      "methods": [{ "name": "FactoryMethod" }]
    }
  ],

  "relationships": [
    {
      "type": "Inheritance",
      "source": "ConcreteProductA",
      "target": "Product"
    },
    {
      "type": "Inheritance",
      "source": "ConcreteCreatorA",
      "target": "Creator"
    },
    {
      "type": "Dependency",
      "source": "Creator",
      "target": "Product",
      "rationale": "Creator depends on Product via FactoryMethod return type"
    }
  ],

  "weights": {
    "classes": 40,
    "methods": 20,
    "relationships": 40,
    "penalties": {
      "wrongDirectionInheritance": 10,
      "missingAbstractFlag": 5
    }
  }
}
